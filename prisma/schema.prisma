// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // For Credentials provider
  role          String    @default("student") // "student" | "admin"
  mustChangePassword Boolean @default(true)
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  progress      StudentProgress[]
}

model Course {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  icon        String
  order       Int      @default(0)
  
  modules     Module[]
}

model Module {
  id          String   @id @default(cuid())
  courseId    String
  slug        String
  title       String
  description String
  videoUrl    String?
  order       Int
  
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  resources   Resource[]
  progress    StudentProgress[]
  homework    Homework?
  topics      Topic[]
  
  @@unique([courseId, slug])
}

model Topic {
  id        String @id @default(cuid())
  moduleId  String
  title     String
  content   String // HTML or Markdown
  order     Int    @default(0)
  
  module    Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
}

model Resource {
  id        String @id @default(cuid())
  moduleId  String
  title     String
  url       String
  type      String // "pdf" | "link" | "video"
  
  module    Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
}

model Homework {
  id          String @id @default(cuid())
  moduleId    String @unique
  description String
  repoUrl     String?

  module      Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
}

model StudentProgress {
  id             String   @id @default(cuid())
  userId         String
  courseId       String // Denormalized for easier querying? Or just rely on module->course
  moduleId       String
  status         String   @default("locked") // "locked" | "not-viewed" | "in-progress" | "completed"
  completedTopics String? // JSON string of array of topic IDs, sqlite doesn't support arrays
  quizResults    String? // JSON string of { quizId: { selectedOption: number, isCorrect: boolean } }
  notes          String?
  homeworkUrl    String?
  homeworkStatus String?  // "pending" | "submitted" | "approved" | "rejected"
  adminComments  String?
  topicStates    String? // JSON string of { topicId: pageIndex }
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  module         Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId])
}
